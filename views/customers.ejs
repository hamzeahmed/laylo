<%- include('header'); -%>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h3><i class="fas fa-users"></i> Customers</h3>
      </div>
      <div class=" d-grid gap-2 col-6 mx-auto">
        <a class="btn rounded-pill btn-outline-warning" href="customers/new_customer">New Customer</a>
      </div>
    </div>
    <table class="table table-hover table-sm">
      <thead>
        <tr>
          <th scope="col"> Name</th>
          <th scope="col">Address</th>
          <th scope="col">Phone</th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% customerList.forEach((customer)=>{ %>
            <td><a style="text-decoration: none;" href="customers/<%=customer._id%>"><%= customer.name%></a></td>
            <td><%= customer.address%></td>
            <td><%= customer.phone%></td>
            <td><%= customer.description%></td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </br>
  </div>
  <%- include('footer'); -%>