<div class="container">
    <div class="row">
        <div class="col-md-6">
            <table class="table table-hover table-sm">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Description</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <%= customer.name%>
                        </td>
                        <td>
                            <%= customer.address%>
                        </td>
                        <td>
                            <%= customer.phone%>
                        </td>
                        <td>
                            <%= customer.description%>
                        </td>

                    </tr>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table table-hover table-sm">
                <thead>
                    <tr>
                        <th scope="col">Total</th>
                        <th scope="col">Download</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <%= total%>
                        </td>
                        <td><a href="<%= path %>" class="fas fa-download "></a></td>
                    </tr>
                </tbody>
            </table>

        </div>
        <div class="col-md-4">
            <a href=" <%=customer._id%>/new_deposit" class="btn rounded-pill btn-outline-warning"><i
                    class="fas fa-dollar-sign"></i> Deposits <i class="fas fa-cart-plus"></i> </a>
            <table class="table table-hover table-sm">
                <thead>
                    <tr>
                        <th scope="col"> Amount</th>
                        <th scope="col">Date</th>
                        <th scope="col">Description</th>


                    </tr>
                </thead>
                <tbody>
                    <% depositList.forEach((deposit)=>{ %>
                        <tr>
                            <td>
                                <%= deposit.date %>
                            </td>
                            <td>$<%= deposit.amount%>
                            </td>
                            <td>
                                <%= deposit.description%>
                            </td>
                            <form action="/customers/<%= customer._id %>/<%= deposit._id%>/delete?_method=delete"
                                method="post" class="d-inline">
                                <td><input type="submit" class="btn rounded-pill btn-outline-danger" value="Delete"
                                        onclick="return confirm('Ma Hubtaa Inad Masaxdid')"></td>
                            </form>
                        </tr>
                        <% }); %>

                </tbody>
            </table>
            <h3 class="btn rounded-pill btn-outline-primary bold">TOTAL = $<%= total_deposits%>
            </h3>
        </div>
        <div class="col-md-4">
            <a href=" <%=customer._id%>/new_service" class="btn rounded-pill btn-outline-warning"><i
                    class="fas fa-dollar-sign"></i> Service <i class="fab fa-servicestack"></i></a>
            <table class="table table-hover table-sm">
                <thead>
                    <tr>
                        <th scope="col"> Amount</th>
                        <th scope="col">Description</th>

                    </tr>
                </thead>
                <tbody>
                    <% serviceList.forEach((service)=>{ %>
                    <tr>
                        <td>$<%= service.amount%></td>
                        <td><%= service.description%></td>
                        <form action="/customers/<%= customer._id %>/<%= service._id%>/delete?_method=delete"
                            method="post" class="d-inline">
                            <td><input type="submit" class="btn rounded-pill btn-outline-danger" value="Delete"
                                    onclick="return confirm('Ma Hubtaa Inad Masaxdid')"></td>
                        </form>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <h3 class="btn rounded-pill btn-outline-primary bold">TOTAL = $<%= total_services%>
        </div>
        <div class="col-md-4">
            <a href=" <%=customer._id%>/new_product" class="btn rounded-pill btn-outline-warning"><i
                    class="fas fa-luggage-cart"></i> Products <i class="fab fa-opencart"></i> </a>
            <table class="table table-hover table-sm">
                <thead>
                    <tr>
                        <th scope="col"> Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Subtotal</th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% productList.forEach((product)=>{ %>
                        <tr>
                            <td>
                                <%= product.name%>
                            </td>
                            <td>$<%= product.price%>
                            </td>
                            <td>
                                <%= product.quantity%>
                            </td>
                            <td>$<%= product.subtotal%>
                            </td>
                            <td>
                                <%= product.description%>
                            </td>
                            <form action="/customers/<%= customer._id %>/<%= product._id%>/delete?_method=delete"
                                method="post" class="d-inline">
                                <td><input type="submit" class="btn rounded-pill btn-outline-danger" value="Delete"
                                        onclick="return confirm('Ma Hubtaa Inad Masaxdid')"></td>
                            </form>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <h3 class="btn rounded-pill btn-outline-primary bold">TOTAL = $<%= total_products%>
            </h3>

        </div>
    </div>
</div>